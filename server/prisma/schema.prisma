generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}


model User {
  id          Int       @id @default(autoincrement())
  email       String    @unique
  username    String    @db.VarChar(20)
  password    String    @db.VarChar(100)
  createdAt   DateTime  @default(now())
  projects    Project[]
  comments    Comment[]
  refreshTokens  RefreshToken[]  // Relation: one user can have many refresh tokens
}
model RefreshToken {
  id         Int      @id @default(autoincrement())
  tokenHash  String   // Hashed version of the refresh token
  userId     Int
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  createdAt  DateTime @default(now())
  expiresAt  DateTime

  @@index([userId])
}

model Project {
  id          Int       @id @default(autoincrement())
  name        String    @unique
  description String    @db.VarChar(255)
  createdAt   DateTime  @default(now())
  creatorId   Int?       
  user        User?     @relation(fields: [creatorId] , references:[id])
  epics       Epic[]
}
/// Add this enum near the top of your schema
enum Priority {
  LOW
  MEDIUM
  HIGH
  CRITICAL
}

/// Epic
model Epic {
  id          Int       @id @default(autoincrement())
  name        String    @unique
  description String    @db.VarChar(255)
  createdAt   DateTime  @default(now())

  // New fields
  creator     String?
  priority    Priority  @default(MEDIUM)
  dueDate     DateTime? // optional due date

  // existing relations
  projectId   Int
  project     Project?  @relation(fields: [projectId], references: [id])
  stories     Story[]

  @@index([creator])
}

/// Story
model Story {
  id          Int       @id @default(autoincrement())
  name        String    @unique
  description String    @db.VarChar(255)
  createdAt   DateTime  @default(now())

  // New fields
  creator     String?
  priority    Priority  @default(MEDIUM)
  dueDate     DateTime?

  // existing relations
  epicId      Int
  epic        Epic?     @relation(fields: [epicId], references: [id])
  tasks       Task[]
  bugs        Bug[]

  @@index([creator])
}

/// Task
model Task {
  id          Int       @id @default(autoincrement())
  name        String    @unique
  description String    @db.VarChar(255)
  createdAt   DateTime  @default(now())

  // New fields
  creator     String?
  priority    Priority  @default(MEDIUM)
  dueDate     DateTime?

  // existing relations
  storyId     Int
  story       Story?    @relation(fields: [storyId], references: [id])

  @@index([creator])
}

/// Bug
model Bug {
  id          Int       @id @default(autoincrement())
  name        String    @unique
  description String    @db.VarChar(255)
  createdAt   DateTime  @default(now())

  // New fields
  creator     String?
  priority    Priority  @default(MEDIUM)
  dueDate     DateTime?

  // existing relations
  storyId     Int
  story       Story?    @relation(fields: [storyId], references: [id])

  @@index([creator])
}


model Comment{
  id          Int       @id @default(autoincrement())
  userId      Int?
  user        User?     @relation(fields: [userId] , references:[id])
}
