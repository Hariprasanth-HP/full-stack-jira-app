generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum TaskType {
  story
  task
}

enum Priority {
  high
  low
}

model tasks {
  id          Int      @id @default(autoincrement())
  type        TaskType 
  priority    Priority 
  summary     String?  @db.VarChar(100)
  description String?  @db.VarChar(255)
  assignee    String   @db.VarChar(100)
  dueDate     DateTime 
  createdAt   DateTime @default(now())
}
